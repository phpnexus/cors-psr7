{
    "name": "phpnexus/cors-psr7",
    "description": "Provides a lightweight CORS middleware for PSR-7 and PSR-15 compatible frameworks.",
    "keywords": [
        "cors",
        "middleware",
        "psr-7",
        "psr7",
        "psr-15",
        "psr15"
    ],
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Mark Prosser"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpnexus/cors": "^0.3.0",
        "psr/http-message": "^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "laminas/laminas-diactoros": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "PhpNexus\\CorsPsr7\\": "src/",
            "PhpNexus\\CorsPsr7\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
